<section class="account-container">
  <h1 class="flash-title"><%= title %></h1>

  <% /* Flash message (si existe en tu proyecto) */ %>
  <div>
    <% if (typeof messages === "function") { %>
      <%- messages() %>
    <% } %>
  </div>

  <div class="form-card">
    <h2 class="form-title"><%= title %></h2>

    <form class="account-form" action="/account/login" method="post">
      <label for="account_email">Email</label>
      <input
        type="email"
        id="account_email"
        name="account_email"
        placeholder="byui@example.com"
        required
      />

      <label for="account_password">Password</label>
      <input
        type="password"
        id="account_password"
        name="account_password"
        placeholder="••••••••"
        minlength="12"
        pattern="^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[^A-Za-z0-9]).{12,}$"
        title="Password must be at least 12 characters and include 1 uppercase, 1 lowercase, 1 number, and 1 special character."
        placeholder="12+ chars, 1 uppercase, 1 number, 1 special"
        required
      />

      <button type="submit" class="btn-primary">Sign In</button>
    </form>

    <p class="form-footer">
      No account?
      <a href="/account/register">Sign-up</a>
    </p>
  </div>
</section>
<div class="management-page">
  <h1><%= title %></h1>

  <% if (messages) { %>
    <%- messages() %>
  <% } %>

  <% if (locals.accountData) { %>
    <h2>Welcome <%= locals.accountData.account_firstname %></h2>

    <p class="mgmt-subtitle">
      <a href="/account/update/<%= locals.accountData.account_id %>">Update Account Information</a>
    </p>

    <% if (locals.accountData.account_type === "Employee" || locals.accountData.account_type === "Admin") { %>
      <h3>Inventory Management</h3>
      <p class="mgmt-subtitle">Use the link below to manage inventory items.</p>

      <ul class="mgmt-actions">
        <li><a href="/inv/">Go to Inventory Management</a></li>
      </ul>
    <% } else { %>
      <p class="mgmt-subtitle">You're logged in âœ…</p>

      <ul class="mgmt-actions">
        <li><a href="/account/">Account Home</a></li>
      </ul>
    <% } %>
  <% } %>
</div>